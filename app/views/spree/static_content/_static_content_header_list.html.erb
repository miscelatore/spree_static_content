<% if page.foreign_link.present? %>
  <li class="p-0 nav-item main-nav-bar-category"><%= link_to page.title, page.foreign_link, target: '_blank', rel: 'nofollow', class: "nav-link main-nav-bar-item main-nav-bar-category-button" %></li>
<% else %>
  <% page_uri = Rails.application.routes.named_routes[:spree].path.spec.to_s == '/' ? page.slug : Rails.application.routes.named_routes[:spree].path.spec.to_s + page.slug %>
  <li class="p-0 nav-item main-nav-bar-category <%= 'current' if (request.fullpath.gsub('//','/') == page_uri) %>"><%= link_to page.title, page_uri, class: "nav-link main-nav-bar-item main-nav-bar-category-button" %></li>
<% end %>
